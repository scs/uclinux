	hex
	default 0x04 if (BFIN533_STAMP && ( BFIN_IDLE_LED_NUM = 1 ))
	default 0x08 if (BFIN533_STAMP && ( BFIN_IDLE_LED_NUM = 2 ))
	default 0x10 if (BFIN533_STAMP && ( BFIN_IDLE_LED_NUM = 3 ))

